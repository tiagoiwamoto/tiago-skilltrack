<%= form_with(model: certificate, local: true, html: { multipart: true }) do |form| %>

  <% if certificate.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(certificate.errors.count, "error") %> prohibited this certificate from being saved:</h2>

      <ul>
        <% certificate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :earn_date, style: "display: block" %>
    <%= form.date_field :earn_date %>
  </div>

  <div>
    <%= form.label :expire_date, style: "display: block" %>
    <%= form.date_field :expire_date %>
  </div>

  <div>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
